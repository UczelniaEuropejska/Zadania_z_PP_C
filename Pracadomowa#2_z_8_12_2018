//Program kt√≥ry zsumuje wszystkie liczby parzyste z 20 wpisanych losowo cyfr
#include <stdio.h> 

int main () 
{ 
   int i,n,x,b,c;
   printf("Program sumujacy liczby wszystkie 20 liczb parzystych \n"); 
   b=c=0; 
   for (i=0; i<20; i++)
   { 
      printf("Wprowadz liczbe: ");
	  scanf("%d", &x); 
      if (x%2) 
           b+=x;
	  else
           c+=x;  
   } 
printf("Suma liczb parzystych wynosi: %d", c);   
return 0;
}
